{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "baseUrl": "./",
      "paths": {
        "*": ["./src/*"]
      },
      "outDir": "./dist",
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "lib": ["es6"],
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist"]
  }